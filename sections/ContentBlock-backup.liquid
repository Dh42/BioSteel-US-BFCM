<section 
  id="section{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="ContentBlock" 
  class="Section Section--{{ section.settings.width }} Section--{{ section.settings.width--mobile }} Animate Animate--slide-up" 
  style="{% if section.settings.use_background %}background: {{ section.settings.background }};{% endif %}
  {% if section.settings.use_background_image %}background-image: url('{{ section.settings.background_image | img_url: '2048x' }}');background-size: cover;background-position: 50% 50%;{% endif %}"
>
  <div class="Section__container">
    <div class="ContentBlockCustom">
      <div class="ContentBlockCustom__content">
          <h3>{{ section.settings.heading }}</h3>
          <p>{{ section.settings.sub_heading }}</p>
          {% if section.settings.cta_button != empty %}
            <a href="{{ section.settings.cta_button_link }}" class="Button Button--on-image">{{ section.settings.cta_button }}</a>
          {% endif %}
      </div>
    </div>
  </div>

  <style>
    #section{{ section.id }} {
      position: relative;
    }
    #section{{ section.id }} .Section__container {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      height: {{ section.settings.height }}px;;
    }
    #section{{ section.id }} .Section__container .ContentBlockCustom__content{
      color: {{ section.settings.content_color }};
    }

    #section{{ section.id }} .Section__container .ContentBlockCustom__content h3 {
      font-size:{{ section.settings.heading_size }}px;
    }
    #section{{ section.id }} .Section__container .ContentBlockCustom__content p {
      font-size:{{ section.settings.subhead_size }}px;
    }

    @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
      #section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top--mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
        height: {{ section.settings.height_mobile }}px;
      }
      #section{{ section.id }} .Section__container .ContentBlockCustom__content h3 {
        font-size:{{ section.settings.heading_size_mobile }}px;
      }
      #section{{ section.id }} .Section__container .ContentBlockCustom__content p {
        font-size:{{ section.settings.subhead_size_mobile }}px;
      }
    }
  </style>
</section>

