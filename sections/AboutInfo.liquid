{% if section.settings.enable_section %}
<section 
  id="section{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="AboutInfo"
  data-tab 
  class="Section Section--{{ section.settings.width }} Section--{{ section.settings.width--mobile }}" 
  style="{% if section.settings.use_background %}background: {{ section.settings.background }};{% endif %}"
>
  <section class="Section__container">
    <div class="AboutInfo">
      {%- for block in section.blocks -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop Start {%- endcomment -%}
{%- capture hide_resource -%}{% render "wc_product_visibility", resource: block %}{%- endcapture -%}
{%- if hide_resource == "true" -%}
  {% continue %}
{%- endif -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop End {%- endcomment -%}

        <div id="{{ block.settings.nav_anchor_title }}" class="AboutInfo__block Animate Animate--slide-up" data-tab-content>
          {%- unless block.settings.content_heading == blank -%}
            <header>
              <h3>{{ block.settings.content_heading }}</h3>
            </header>
          {%- endunless -%}
          {%- for i in (1..4) -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop Start {%- endcomment -%}
{%- capture hide_resource -%}{% render "wc_product_visibility", resource: i %}{%- endcapture -%}
{%- if hide_resource == "true" -%}
  {% continue %}
{%- endif -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop End {%- endcomment -%}

            {%- assign image = 'image_' | append: i -%}
            {%- assign small_heading = 'small_heading_' | append: i -%}
            {%- assign content_description = 'content_description_' | append: i -%}
            {%- assign content_link = 'content_link_' | append: i -%}

            {%- unless block.settings[small_heading] == '' -%}
              <div class="AboutInfo__content--block">
                {%- unless block.settings[image] == blank -%}
                  <div class="AboutInfo__image">
                    <img src="{{ block.settings[image] | img_url: '640x640' }}">
                  </div>
                {%- endunless -%}
                <div class="AboutInfo__content">
                  <h4>{{ block.settings[small_heading] }}</h4>
                  {%- if block.settings[content_description] -%}
                    <p>{{ block.settings[content_description] }}</p>
                  {%- endif -%}
                  {%- if block.settings[content_link] -%}
                    <a href="{{ block.settings[content_link] }}" target="_blank">{{ block.settings[content_link] }}</a>
                  {%- endif -%}
                </div>
              </div>
            {%- endunless -%}
          {%- endfor -%}
        </div>
      {%- endfor -%}
    </div>

  </section>
  <style>
    #section{{ section.id }} .Section__container {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
      #section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top--mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
      }
    }
  </style>
</section>
{% endif %}
