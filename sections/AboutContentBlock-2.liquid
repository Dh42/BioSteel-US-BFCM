      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image for Desktop",
        "info": "For best results, upload a retina background image"
      },
      {
        "type": "image_picker",
        "id": "background_image_mobile",
        "label": "Background Image for Mobile",
        "info": "For best results, upload a retina background image"
      },
      {
        "type": "html",
        "id": "heading",
        "label": "Content Block Heading",
        "default": "Content Block Heading"
      },
      {
        "type": "html",
        "id": "description",
        "label": "Content Block Description",
        "default": "Content Block Description"
      },
      {
        "type": "header",
        "content": "Desktop :: Settings"
      },
      {
        "type": "color",
        "id": "content_color",
        "label": "Content Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "content_background_color",
        "label": "Content Background Color",
        "default": "#fff"
      },
      {
        "label": "Content Alignment",
        "id": "alignment",
        "type": "select",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "range",
        "id": "heading_size",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Content Heading font size",
        "default": 20
      },
      {
        "type": "range",
        "id": "description_size",
        "min": 10,
        "max": 28,
        "step": 1,
        "unit": "px",
        "label": "Content Description font size",
        "default": 17
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
