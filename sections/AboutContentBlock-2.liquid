        "label": "Top Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 0
      },
      {
        "type": "header",
        "content": "Mobile :: Settings"
      },
      {
        "type": "color",
        "id": "content_color_mobile",
        "label": "Content Color",
        "default": "#000"
      },
      {
        "type": "range",
        "id": "heading_size_mobile",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px", 
        "label": "Content Heading font size for mobile",
        "default": 20
      },
      {
        "type": "range",
        "id": "description_size_mobile",
        "min": 10,
        "max": 28,
        "step": 1,
        "unit": "px",
        "label": "Content Description font size for mobile",
        "default": 17
      },
      {
        "type": "range",
        "id": "padding_top--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 0
      }
    ]
  }
