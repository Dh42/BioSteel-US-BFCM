{% if section.settings.enable_section %}
<section id="section{{ section.id }}" class="Biosteelway Section Section--full">
  <div class="Animate Animate--slide-up hide--desktop">
    <div class="Biosteelway__content">
      <h3>{{ section.settings.heading }}</h3>
      <p>{{ section.settings.description }}</p>
    </div>
    <div class="Animate Animate--slide-up Biosteelway__background"></div>
  </div>
  <div class="Section Section--fixed hide--mobile">
    <div class="Section__container">
      <div class="Biosteelway__background">
        <div class="Biosteelway__content--{{ section.settings.alignment }} Animate Animate--slide-right">
          <h3>{{ section.settings.heading }}</h3>
          <p>{{ section.settings.description }}</p>
        </div>
      </div>
      </div>
  </div>
</section>
<style>
  @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
     section#section{{ section.id }} {
      padding-top: {{ section.settings.padding_top--mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
     }

    section#section{{ section.id }} h3 {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    section#section{{ section.id }} p {
      font-size: {{ section.settings.description_size_mobile }}px;
    }

    section#section{{ section.id }} .Biosteelway__content {
      color:{{ section.settings.content_color_mobile }};
      background-color: {{ section.settings.content_background_color }};
    }

    .Biosteelway__background {
      background-image: url('{{ section.settings.background_image_mobile | img_url: '1200x'}}');
      background-position: 50% 50%;
    }
  }
  @media only screen and (min-width: {{ settings.grid_tablet_min }}) {
    section#section{{ section.id }} {
      background-image: url('{{ section.settings.background_image | img_url: '2048x'}}');
      background-size: cover;
      background-position: 50% 50%;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    section#section{{ section.id }} .Biosteelway__content {
      color:{{ section.settings.content_color }};

    }
    section#section{{ section.id }} .Section__container h3 {
      font-size: {{ section.settings.heading_size }}px;
    }

    section#section{{ section.id }} .Section__container p {
      font-size: {{ section.settings.description_size }}px;
    }
    
    section#section{{ section.id }} .Section__container div > div {
      color:{{ section.settings.content_color }};
      background-color: {{ section.settings.content_background_color }};
    }
  }
</style>
{% endif %}
