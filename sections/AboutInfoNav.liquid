{% if section.settings.enable_section %}  
<section 
  id="section{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="AboutInfoNav" 
  class="Section Section--{{ section.settings.width }} Section--{{ section.settings.width--mobile }}" 
  style="{% if section.settings.use_background %}background: {{ section.settings.background }};{% endif %}"
>

<nav class="AboutInfoNav__container">
  <a class="AboutInfoNav__title" data-tab-title>{{ section.settings.nav_heading }}
    <i class="far fa-chevron-down" data-tab-icon></i>
  </a>
  <ul data-tab-control>
    {%- for block in section.blocks -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop Start {%- endcomment -%}
{%- capture hide_resource -%}{% render "wc_product_visibility", resource: block %}{%- endcapture -%}
{%- if hide_resource == "true" -%}
  {% continue %}
{%- endif -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop End {%- endcomment -%}

      <li class="AboutInfoNav__link Animate Animate--slide-up" data-tab-link>
        <a href="#{{ block.settings.nav_anchor }}" class="">{{block.settings.nav_title}}</a>
      </li>  
    {%- endfor -%}
  </ul>
</nav>
  <style>
    #section{{ section.id }} {
      background-color: var(--h1-color);
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
      #section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top--mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
      }
    }
  </style>
</section>
{% endif %}
{% schema %}
  {
    "name": "Nav",
    "max_blocks": 4,
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Section ?",
        "default": true
      },
      {
        "type": "color",
        "id": "background",
        "label": "Nav Background color",
        "default": "#cd012b"
      },
      {
        "type": "color",
        "id": "link_color",
        "label": "Nav Link color",
        "default": "#fff"
      },
      {
        "type": "header",
        "content": "Desktop :: Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 20
      },
      {
        "type": "header",
        "content": "Mobile :: Settings"
      },
      {
        "type": "text",
        "id": "nav_heading",
        "label": "Nav Heading shown on mobile"
      },
      {
        "type": "range",
        "id": "padding_top--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 30
      },
      {
        "type": "range",
        "id": "padding_bottom--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 30
      }
    ],
    "blocks": [
      {
        "type": "Nav",
        "name": "Nav Title",
        "settings": [
          {
            "type": "text",
            "id": "nav_anchor",
            "label": "Nav Anchor",
            "info": "Nav anchor. No spaces."
          },
          {
            "type": "text",
            "id": "nav_title",
            "label": "Nav Title",
            "info": "Title that is shown on front end"
          }
        ]
      }
    ]
  }
{% endschema %}