<style>
  {{ section.settings.menu_title_font | font_face }}
  {{ section.settings.menu_font | font_face }}

  .Footer {
    color: {{ section.settings.color }};
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
    .Footer {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }

  .Footer a,
  .Footer a:visited,
  .Footer a:active {
    color: {{ section.settings.link_color }};
  }

  .Footer a:hover {
    color: {{ section.settings.link_color_hover }};
  }

  .Footer__title {
    color: {{ section.settings.menu_title_color }};
    font-family: {{ section.settings.menu_title_font.family }}, {{ section.settings.menu_title_font.fallback_families }};
    font-size: {{ section.settings.menu_title_font_size }}px;
    font-weight: {{ section.settings.menu_title_font.weight }};
    font-style: {{ section.settings.menu_title_font.style }};
    text-transform: {{ section.settings.menu_title_text_capitalization }};
  }

  .Footer__link {
    font-family: {{ section.settings.menu_font.family }}, {{ section.settings.menu_font.fallback_families }};
    font-size: {{ section.settings.menu_font_size }}px;
    font-weight: {{ section.settings.menu_font.weight }};
    font-style: {{ section.settings.menu_font.style }};
    text-transform: {{ section.settings.menu_text_capitalization }};
  }

  .Footer__link a,
  .Footer__link a:visited,
  .Footer__link a:active {
    color: {{ section.settings.menu_link_color }};
  }

  .Footer__link a:hover {
    color: {{ section.settings.menu_link_color_hover }};
  }

  .Footer__social-icon {
    font-size: {{ section.settings.icon_size }}px;
  }

  .Footer__social-icon a,
  .Footer__social-icon a:visited,
  .Footer__social-icon a:active {
    color: {{ section.settings.icon_color }};
  }

  .Footer__social-icon a:hover {
    color: {{ section.settings.icon_color_hover }};
  }

  .Footer__copyright,
  .Footer__shout-out {
    font-size: {{ section.settings.copyright_font_size }}px;
  }
</style>

{% include 'Footer' %}
{% include 'Footer', extra_classes: 'Footer--placeholder' %}

