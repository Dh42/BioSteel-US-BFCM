<section 
  id="section{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="CovetPics" 
  class="CovetPics Section Section--{{ section.settings.width }} Section--{{ section.settings.width--mobile }}" 
  style="{% if section.settings.use_background %}background: {{ section.settings.background }};{% endif %}"
>
  <div class="Section__container Animate Animate--slide-up">
    {% if section.settings.heading != 'blank' %}
      <h3>{{ section.settings.heading }}</h3>
    {% endif %}

    {%- if shop.currency == 'CAD' -%}
      <div class="covet-pics-gallery" data-id="51825"></div>
    {%- endif -%}

    {%- if shop.currency == 'USD' -%}
      <div class="covet-pics-gallery" data-id="52649"></div>
    {%- endif -%}
    
  </div>

  <style>
    #section{{ section.id }} .Section__container {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    
    @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
      #section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top--mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
      }

    }
  </style>
</section>

