{% if section.settings.enable_section %}
<section 
  id="section{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="ContentBlock" 
  class="Section Section--{{ section.settings.width }} Section--{{ section.settings.width--mobile }} Animate Animate--slide-up" 
  style="{% if section.settings.use_background %}background: {{ section.settings.background }};{% endif %}"
>

  <div class="Section__container">
    <div class="AboutContentBlock">
      <div class="AboutContentBlock__image">
        <img class="AboutContentBlock__image--mobile" src="{{ section.settings.mobile_background_image | img_url: '2048x' }}">
        <img class="AboutContentBlock__image--desktop" src="{{ section.settings.background_image | img_url: '2048x' }}">
      </div>
        <div class="AboutContentBlock__content">
            <h3>{{ section.settings.heading }}</h3>
            <p>{{ section.settings.sub_heading }}</p>
            {% if section.settings.cta_button != empty %}
              <a href="{{ section.settings.cta_button_link }}" class="Button Button--on-image">{{ section.settings.cta_button }}</a>
            {% endif %}
        </div>
    </div>
  </div>

  <style>
    #section{{ section.id }} {
      position: relative;
      background-size: cover;
      background-position: 50% 50%;
      background-repeat: no-repeat;
    }
    #section{{ section.id }} .Section__container {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #section{{ section.id }} .Section__container .AboutContentBlock__content{
      color: {{ section.settings.content_color }};
    }

    #section{{ section.id }} .Section__container .AboutContentBlock__content h3 {
      font-size:{{ section.settings.heading_size }}px;
    }
    #section{{ section.id }} .Section__container .AboutContentBlock__content p {
      font-size:{{ section.settings.subhead_size }}px;
    }

    @media only screen and (max-width: {{ settings.grid_mobile_max }}) {

      #section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top--mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
      }
      #section{{ section.id }} .Section__container .AboutContentBlock__content h3 {
        font-size:{{ section.settings.heading_size_mobile }}px;
      }
      #section{{ section.id }} .Section__container .AboutContentBlock__content p {
        font-size:{{ section.settings.subhead_size_mobile }}px;
      }
    }}
  </style>
</section>
{% endif %}
