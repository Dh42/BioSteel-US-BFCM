{%- assign current_variant = product.selected_or_first_available_variant -%}

<section 
  id="Section{{ section.id }}"
  data-section-id="{{ section.id }}" 
  data-section-type="INF-ProductDescription"
  class="Section Section--{{ section.settings.width }} Section--{{ section.settings.width--mobile }}" 
  style="{% if section.settings.use_background %}background: {{ section.settings.background }};{% endif %}"
>
  <div class="Section__container">
    {% include 'ProductDescription' %}
  </div>

  <style>
    /* DESKTOP */
    @media only screen and (min-width: {{ settings.grid_tablet_min }}) {
      #Section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    /* MOBILE */
    @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
      #Section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top--mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
      }
    }
  </style>
</section>

{% schema %}
  {
    "name": "Product Description",
    "settings": [
      {
        "label": "Heading",
        "id": "heading",
        "type": "text",
        "default": "Details"
      },
      {
        "type": "checkbox",
        "id": "use_background",
        "label": "Use background color",
        "default": true,
        "info": "Check this to use a custom section background color."
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background color",
        "default": "#fafafa"
      },
      {
        "type": "header",
        "content": "Desktop :: Section Settings"
      },
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "fixed",
        "options": [
          {
            "label": "Full (Edge-to-Edge)",
            "value": "full"
          },
          {
            "label": "Fixed",
            "value": "fixed"
          }
        ]
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 30
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 30
      },
      {
        "type": "header",
        "content": "Mobile :: Section Settings"
      },
      {
        "type": "select",
        "id": "width--mobile",
        "label": "Width",
        "default": "mobile-fixed",
        "options": [
          {
            "label": "Full (Edge-to-Edge)",
            "value": "mobile-full"
          },
          {
            "label": "Fixed",
            "value": "mobile-fixed"
          }
        ]
      },
      {
        "type": "range",
        "id": "padding_top--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 15
      },
      {
        "type": "range",
        "id": "padding_bottom--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 15
      }
    ]
  }
{% endschema %}