      <div class="grid grid--flush-bottom features_table_grid">
        <div class="grid__item one-half row_column row_feature_column1">
          {% if block.settings.column1_text != blank %}
          <div class="heading-FeaturedColumns">{{ block.settings.column1_text  }}</div>
          {% else %}
          <div><p>&nbsp;</p></div>
          {% endif %}
        </div>
        <div class="grid__item one-half row_column row_feature_column3">
          {% if block.settings.column3_text != blank %}
          <div class="heading-FeaturedColumns">{{ block.settings.column3_text  }}</div>
          {% else %}
          <div><p>&nbsp;</p></div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
      </div>
      <br><br>
      {% endif %}
      
      
      {% if section.settings.column4_heading != blank %}
      <div class="columns_container">
      <div class="grid grid--flush-bottom features_table_grid">
        <div class="grid__item one-whole feature_column2">
          <h4 class="heading-FeaturedColumns">{{ section.settings.column4_heading }}</h4>
        </div>
      </div>
      
      {% for block in section.blocks %}
