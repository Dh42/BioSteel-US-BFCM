        <div class="grid__item one-half row_column row_feature_column1">
          {% if block.settings.column1_text != blank %}
          <div class="heading-FeaturedColumns">{{ block.settings.column1_text  }}</div>
          {% else %}
          <div><p>&nbsp;</p></div>
          {% endif %}
        </div>
        <div class="grid__item one-half row_column row_feature_column4">
          {% if block.settings.column4_text != blank %}
          <div class="heading-FeaturedColumns">{{ block.settings.column4_text  }}</div>
          {% else %}
          <div><p>&nbsp;</p></div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
      </div>
      <br><br>
      {% endif %}
      
    </div>
    
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Features Table",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Section ?",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "number",
        "id": "font_size",
        "label": "Heading Size"
      },
      {
        "type": "text",
        "id": "column1_heading",
        "label": "Column 1 Heading"
      },
      {
        "type": "text",
        "id": "column2_heading",
        "label": "Column 2 Heading"
      },
      {
        "type": "text",
        "id": "column3_heading",
        "label": "Column 3 Heading"
      },
      {
        "type": "text",
        "id": "column4_heading",
        "label": "Column 4 Heading"
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Row",
        "settings": [
          {
            "type": "richtext",
            "id": "column1_text",
            "label": "Column 1 Text"
          },
          {
            "type": "richtext",
            "id": "column2_text",
            "label": "Column 2 Text"
          },
          {
            "type": "richtext",
            "id": "column3_text",
            "label": "Column 3 Text"
          },
          {
            "type": "richtext",
            "id": "column4_text",
            "label": "Column 4 Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Features Table",
        "category": "Text"
      }
    ]
  }
{% endschema %}