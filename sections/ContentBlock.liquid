{% if section.settings.use_background_image %}
<style type="text/css">
  #section{{ section.id }}{
    background-image: url('{{ section.settings.background_image | img_url: '2048x' }}');
    background-size: cover;
    background-position: 50% 50%;
  }
  
  {% if section.settings.mobile_background_image %}
  @media only screen and (max-width: 600px) {
    #section{{ section.id }}{
      background-image: url('{{ section.settings.mobile_background_image | img_url: 'master' }}');
    }
  }
  {% endif %}
</style>
{% endif %}
  
<section 
  id="section{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="ContentBlock" 
  class="Section Section--{{ section.settings.width }} Section--{{ section.settings.width--mobile }} Animate Animate--slide-up" 
  style="{% if section.settings.use_background %}background: {{ section.settings.background }};{% endif %}
  {% comment %}{% if section.settings.use_background_image %}background-image: url('{{ section.settings.background_image | img_url: '2048x' }}');background-size: cover;background-position: 50% 50%;{% endif %}{% endcomment %}"
>
  <div class="Section__container Section__Align Section__Align--{{ section.settings.alignment }}">
    <div class="ContentBlockCustom">
      <div class="ContentBlockCustom__content">
        {% if section.settings.heading != "" %}
          <h3>{{ section.settings.heading }}</h3>
        {% endif %}
        {% if section.settings.sub_heading != "" %}
          <p>{{ section.settings.sub_heading }}</p>
        {% endif %}
          {% if section.settings.cta_button != empty %}
            <a href="{{ section.settings.cta_button_link }}" class="Button Button--{{ section.settings.cta_button_style }}">{{ section.settings.cta_button }}</a>
          {% endif %}
        
          {% if section.settings.cta_button2 != empty %}
            <a href="{{ section.settings.cta_button2_link }}" class="Button Button--{{ section.settings.cta_button2_style }}">{{ section.settings.cta_button2 }}</a>
          {% endif %}
        
          {% if section.settings.cta_button3 != empty %}
            <a href="{{ section.settings.cta_button3_link }}" class="Button Button--{{ section.settings.cta_button3_style }}">{{ section.settings.cta_button3 }}</a>
          {% endif %}
        
      </div>
    </div>
  </div>

  <style>
    #section{{ section.id }} {
      position: relative;
    }
    #section{{ section.id }} .Section__container {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      height: {{ section.settings.height }}px;;
    }
    #section{{ section.id }} .Section__container .ContentBlockCustom__content{
      color: {{ section.settings.content_color }};
    }

    #section{{ section.id }} .Section__container .ContentBlockCustom__content h3 {
      font-size:{{ section.settings.heading_size }}px;
    }
    #section{{ section.id }} .Section__container .ContentBlockCustom__content p {
      font-size:{{ section.settings.subhead_size }}px;
    }

    @media only screen and (max-width: {{ settings.grid_mobile_max }}) {
      #section{{ section.id }} .Section__container {
        padding-top: {{ section.settings.padding_top--mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
        height: {{ section.settings.height_mobile }}px;
      }
      #section{{ section.id }} .Section__container .ContentBlockCustom__content h3 {
        font-size:{{ section.settings.heading_size_mobile }}px;
      }
      #section{{ section.id }} .Section__container .ContentBlockCustom__content p {
        font-size:{{ section.settings.subhead_size_mobile }}px;
      }
    }
  </style>
</section>

