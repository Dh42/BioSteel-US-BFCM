      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 30
      },
      {
        "type": "header",
        "content": "Mobile :: Settings"
      },
      {
        "type": "select",
        "id": "width--mobile",
        "label": "Width",
        "default": "mobile-full",
        "options": [
          {
            "label": "Full (Edge-to-Edge)",
            "value": "mobile-full"
          },
          {
            "label": "Fixed",
            "value": "mobile-fixed"
          }
        ]
      },
      {
        "type": "range",
        "id": "padding_top--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 15
      },
      {
        "type": "range",
        "id": "padding_bottom--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 15
      }
    ],
    "blocks": [
      {
        "type": "Heading",
        "name": "Heading",
        "settings": [
          {
            "label": "Heading",
            "id": "heading",
            "type": "text"
          }
        ]
      },
      {
        "type": "FAQ",
        "name": "FAQ",
        "settings": [
          {
            "label": "Question",
            "id": "question",
            "type": "html"
          },
          {
            "label": "Answer",
            "id": "answer",
            "type": "html"
          }
        ]
      }
    ]
  }
{% endschema %}