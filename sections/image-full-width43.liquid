{% if section.settings.enable_section %}
<section
  id="section{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="INF-ImageFull"
  class="Section Section--fixed Section--fixed INF-ImageFull"
  style=""
>
  {% capture image_layout %}
    <div class="feature-row__itemm" style="text-align:center;">
      {% if section.settings.image_link != blank %}
      <a href="{{section.settings.image_link}}">
      {% endif %}
        

      {% if section.settings.image_desktop != blank %}
        <div class="desktop_image_banner">
        {%- assign img_url = section.settings.image_desktop | img_url: 'master' -%}
        <img style="max-width:100%;display:inline-block;" src="{{ img_url }}">
        </div>
      {% endif %}
        
      {% if section.settings.image_mobile != blank %}
        <div class="mobile_image_banner">
        {%- assign img_url = section.settings.image_mobile | img_url: 'master' -%}
        <img style="max-width:100%;display:inline-block;" src="{{ img_url }}">
        </div>
      {% endif %}
        
        
      {% if section.settings.image_link != blank %}
      </a>
      {% endif %}
    </div>
  {% endcapture %}
  
  <div class="Section__container feature-row" style="display:block;">
    {{ image_layout }}
    <div class="clearfix"></div>
  </div>
</section>

<style type="text/css">
  .INF-ImageFull .responsive-image__wrapper,
  .INF-ImageFull .responsive-image__image{
    max-width:100% !important;
  }
  .INF-ImageFull{
    margin-top:50px;
  }
  @media only screen and (min-width: 769px){
    .mobile_image_banner{
      display:none;
    }
  }
  @media only screen and (max-width: 768px){
    .desktop_image_banner{
      display:none;
    }
  }
</style>
{% endif %}

{% schema %}
  {
    "name": "Image Full Width",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Section ?",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image"
      },
      {
        "type": "url",
        "id": "image_link",
        "label": "Image link"
      }
    ],
    "presets": [
      {
        "name": "Image Full Width",
        "category": "Image"
      }
    ]
  }
{% endschema %}