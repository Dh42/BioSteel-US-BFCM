{% if section.settings.enable_section %}
<section 
  id="section{{ section.id }}" 
  data-section-id="{{ section.id }}" 
  data-section-type="ContentBlock" 
  class="WhyBiosteel">
  <div class="WhyBiosteel__container--mobile">
    <div class="WhyBiosteel__block WhyBiosteel__content Animate Animate--slide-up ">
      <h3>{{ section.settings.heading }}</h3>
          {{ section.settings.description }}
    </div>
    <div class="WhyBiosteel__block WhyBiosteel__image Animate Animate--slide-up ">
      <img src="{{ section.settings.image_mobile | img_url: '1024x' }}">
    </div>
  </div>
  <div class="WhyBiosteel__container--desktop">
    <div class="WhyBiosteel__block WhyBiosteel__image Animate Animate--slide-right ">
      <img src="{{ section.settings.image | img_url: '1024x' }}">
    </div>
    <div class="WhyBiosteel__block WhyBiosteel__content Animate Animate--slide-left">
      <div class="WhyBiosteel__content">
        <h3>{{ section.settings.heading }}</h3>
            {{ section.settings.description }}
      </div>
    </div>
  </div>
</section>
<style>
section#section{{ section.id }} {
  padding-top: {{ section.settings.padding_top--mobile }}px;
  padding-bottom: {{ section.settings.padding_bottom--mobile }}px;
}
@media only screen and (min-width: {{ settings.grid_tablet_min }}) {
  section#section{{ section.id }} {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
</style>
{% endif %}
{% schema %}
  {
    "name": "Content Block 3",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Section ?",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image for Desktop",
        "info": "For best results, upload a retina background image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image for Mobile",
        "info": "For best results, upload a retina background image"
      },
      {
        "type": "html",
        "id": "heading",
        "label": "Content Block Heading",
        "default": "Content Block Heading"
      },
      {
        "type": "html",
        "id": "description",
        "label": "Content Block Description",
        "info": "Use <h4> tag for heading, <p> for paragraph text"
      },
      {
        "type": "header",
        "content": "Desktop :: Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 0
      },
      {
        "type": "header",
        "content": "Mobile :: Settings"
      },
      {
        "type": "range",
        "id": "padding_top--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom--mobile",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 0
      }
    ]
  }
{% endschema %}
