{%- assign limit = 7 -%}
{%- if section.settings.size == 'large' -%}
  {%- assign limit = 17 -%}
{%- endif -%}
{%- case section.settings.mobile_columns -%}
  {%- when "1" -%}
    {%- assign mobile_size = 'full' -%}
  {%- when "2" -%}
    {%- assign mobile_size = 'half' -%}
{%- endcase -%}

{% include 'INF-Instagram', type: 'Mosaic' %}

{% schema %}
  {
    "name": "Instagram Mosaic",
    "settings": [
     {
        "type": "checkbox",
        "id": "use_background",
        "label": "Use background color",
        "default": true,
        "info": "Check this to use a custom section background color."
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background color",
        "default": "#000"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Follow us @yourname"
      },
      {
        "type": "select",
        "id": "heading_class",
        "label": "Heading Style",
        "default": "h3",
        "options": [
          {
            "value": "h1",
            "label": "H1"
          },
          {
            "value": "h2",
            "label": "H2"
          },
          {
            "value": "h3",
            "label": "H3"
          },
          {
            "value": "h4",
            "label": "H4"
          },
          {
            "value": "h5",
            "label": "H5"
          },
          {
            "value": "h6",
            "label": "H6"
          },
          {
            "value": "h7",
            "label": "H7"
          },
          {
            "value": "h8",
            "label": "H8"
          },
          {
            "value": "p",
            "label": "Paragraph"
          },
          {
            "value": "pbold",
            "label": "Paragraph (Bold)"
          }
        ]
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "heading_background",
        "label": "Heading background color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Desktop :: Settings"
      },
      {
        "type": "select",
        "id": "size",
        "label": "Size",
        "default": "small",
        "options": [
          {
            "label": "Small (7 Photos)",
            "value": "small"
          },
          {
            "label": "Large (17 Photos)",
            "value": "large"
          }
        ]
      },
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "full",
        "options": [
          {
            "label": "Full (Edge-to-Edge)",
            "value": "full"
          },
          {
            "label": "Fixed",
            "value": "fixed"
          }
        ]
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 0
      },
      {
        "type": "header",
        "content": "Mobile :: Settings"
      },
      {
        "type": "select",
        "id": "mobile_width",
        "label": "Width",
        "default": "mobile-full",
        "options": [
          {
            "label": "Full (Edge-to-Edge)",
            "value": "mobile-full"
          },
          {
            "label": "Fixed",
            "value": "mobile-fixed"
          }
        ]
      },
      {
        "type": "range",
        "id": "mobile_padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "mobile_padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "mobile_limit",
        "min": 2,
        "max": 16,
        "step": 2,
        "label": "Number of photos",
        "default": 6
      },
      {
        "type": "select",
        "id": "mobile_columns",
        "label": "Number of photos per row",
        "options": [
          {
            "label": "1",
            "value": "1"
          },
          {
            "label": "2",
            "value": "2"
          }
        ],
        "default": "2"
      },
      {
        "type": "header",
        "content": "Feed Settings"
      },
      {
        "type": "text",
        "id": "access_token",
        "label": "Access token",
        "info": "Generate an instagram access token here: http://instagram.pixelunion.net/"
      }
    ],
    "presets": [
      {
        "name": "Instagram Mosaic",
        "category": "Image"
      }
    ]
  }
{% endschema %}