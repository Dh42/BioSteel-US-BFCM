<article class="ArticleContent" role="article">
  <div class="ArticleContent__body rte">
    {%- if section.settings.show_date -%}
      <div class="ArticleContent__date-container">
        <h5 class="ArticleContent__date">{{ article.published_at | date: "%B %d, %Y" }}</h5>
      </div>      
    {%- endif -%}

    {% include 'rte-content', object: article %}
  </div>

  {% if settings.social_sharing_blog %}
    {% include 'SocialSharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
  {% endif %}

</article>