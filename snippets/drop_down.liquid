<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.1.slim.min.js" integrity="sha256-w8CvhFs7iHNVUtnSP0YKEg00p9Ih13rlL9zGqvLdePA=" crossorigin="anonymous"></script>


<script type="application/ld+json">
  {% assign days = 90 | times: 86400 %}
  {
    "@context": "https://schema.org/",
    "@type": "Product",
    "name": "{{ product.title }}",
    "image": [
      "{{ product.featured_image | img_url: '800x800' }}"
    ],
    "description": "{{ product.description | escape }}",
    "sku": "{{ product.sku }}",
    "brand": {
      "@type": "Brand",
      "name": "BioSteel"
    },
      {% if product.metafields.stamped.reviews_count and product.metafields.stamped.reviews_count != "0" %} 
"aggregateRating": {
 "@type": "AggregateRating",
 "ratingValue": {{ product.metafields.stamped.reviews_average | round:2 }},
 "reviewCount": {{product.metafields.stamped.reviews_count}}
},
{% endif %}
    "offers": {
      "@type": "Offer",
      "url": "{{ product.url }}",
      "priceCurrency": "CAD",
      "price": "{{ product.price | money_without_currency }}",
      "availability": "http://schema.org/InStock",
      "priceValidUntil": "{{ 'now' | date: '%s' | plus: days | date: '%Y-%m-%d' }}",
      "shippingDetails": {
        "@type": "OfferShippingDetails",
        "shippingRate": {
          "@type": "MonetaryAmount",
          "value": "0",
          "currency": "CAD"
        },
        "deliveryTime": {
          "@type": "ShippingDeliveryTime",
          "transitTime": {
            "@type": "QuantitativeValue",
            "minValue": 3,
            "maxValue": 6,
            "unitCode": "DAY"
          },
          "handlingTime": {
            "@type": "QuantitativeValue",
            "minValue": 1,
            "maxValue": 2,
            "unitCode": "DAY"
          }
        },
        "shippingDestination": {
          "@type": "DefinedRegion",
          "addressCountry": {
            "@type": "Country",
            "name": "CA"
          }
        }
      },
      "hasMerchantReturnPolicy": {
        "@type": "MerchantReturnPolicy",
        "url": "{{ shop.url }}/pages/shipping-return-policy",
        "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
        "merchantReturnDays": 6,
        "applicableCountry": {
          "@type": "Country",
          "name": "CA"
        },
        "returnMethod": "https://schema.org/ReturnByMail",
        "returnFees": "https://schema.org/FreeReturn"
      }
    }
  }
</script>

