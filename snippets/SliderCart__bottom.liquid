{% comment %} By default, this is just the continue shopping button...but feel free to add whatever you want like terms and conditions, payment icons, etc. {% endcomment %}
<div class="SliderCart__bottom">
  <div class="SliderCart__button--shopping {% if cart.item_count == 0 %}SliderCart--empty{% endif %}" data-cart>
    <div class="SliderCart__button Button Button--secondary" data-cart-toggle>
        {% include 'INF-translation', translate: 'cart.general.continue_shopping', default: 'Continue Shopping' %}
    </div>
  </div>
  {% assign promo_collection = collections[section.settings.promo_collection] %}
  {% include 'PromoCollectionCarousel', collection: promo_collection %}
</div>