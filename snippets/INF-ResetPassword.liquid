<div class="ResetPassword">
  <div class="Section Section--fixed Section--mobile-fixed">
    <div class="Section__container">
      {% form 'reset_customer_password', class: "Form ResetPassword__form" %}
        <p class="ResetPassword__instructions">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}

        <div class="Form__input-group">
          <div class="Form__input-item">
            <label for="ResetPassword" class="Form__label">
              {{ 'customer.reset_password.password' | t }}
            </label>
            <div class="Form__input-wrapper">
              <input type="password"
                name="customer[password]"
                id="ResetPassword"
                class="Form__input {% if form.errors contains 'password' %}input-error{% endif %}"
                placeholder="{{ 'customer.reset_password.password' | t }}">
            </div>
          </div>
          <div class="Form__input-item">
            <label for="PasswordConfirmation" class="Form__label">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <div class="Form__input-wrapper">
              <input type="password"
                name="customer[password_confirmation]"
                id="PasswordConfirmation"
                class="Form__input {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
                placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div>
          </div>
        </div>

        <input type="submit" class="Button" value="{{ 'customer.reset_password.submit' | t }}">
      {% endform %}
    </div>
  </div>
</div>