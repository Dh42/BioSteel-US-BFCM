<div class="Overlay__content ContentArea__content">
  <div class="Section__container {% if section.settings.animation != 'none' %}Animate Animate--{{ section.settings.animation }}{% endif %}">
    <div class="Section__info">
      {%- if section.settings.heading != '' -%}<h3 class="Section__heading {{ section.settings.heading_class }}">{{ section.settings.heading }}</h3>{%- endif -%}
      {%- if section.settings.paragraph != '<p></p>' -%}<div class="ContentArea__paragraph">{{ section.settings.paragraph }}</div>{%- endif -%}
    </div>
    <div class="ContentArea__blocks">
      {%- for block in section.blocks -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop Start {%- endcomment -%}
{%- capture hide_resource -%}{% render "wc_product_visibility", resource: block %}{%- endcapture -%}
{%- if hide_resource == "true" -%}
  {% continue %}
{%- endif -%}
{%- comment -%} Wholesale_Club_Product_Visibility_For_Loop End {%- endcomment -%}

        {% include 'INF-ContentBlock' %}
      {%- endfor -%}
    </div>
  </div>
</div>